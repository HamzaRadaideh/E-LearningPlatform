@{
    ViewData["Title"] = "About";
}
<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
        <p class="lead text-muted">Welcome to the best E-Learning Website</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="text-primary">About the Developer</h5>
                    <p class="card-text">This platform is designed and developed by <strong>Hamza Radaideh</strong>, an enthusiastic software developer passionate about creating efficient and scalable web solutions.</p>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="text-primary">Technologies Used</h5>
                    <p class="">Developed using <strong>ASP.NET Core MVC</strong> with <strong>SQL Server</strong>.</p>
                    <p class="">Designed using <strong>HTML, CSS, JavaScript, Bootstrap</strong>, and <strong>jQuery</strong>.</p>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="text-primary">Project Repository</h5>
                    <p class="card-text">You can find the complete project on GitHub. Feel free to explore the code and contribute!</p>
                    <a href="https://github.com/your-github-repo" class="btn btn-primary btn-block" target="_blank">View on GitHub</a>
                </div>
            </div>
        </div>
    </div>
</div>
