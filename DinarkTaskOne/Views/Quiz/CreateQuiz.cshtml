@{
    int remainingMarks = ViewBag.RemainingMarks ?? 100;
}

<h2>Create a New Quiz</h2>
<p>Remaining marks for the course: @remainingMarks</p>


<form asp-action="CreateQuiz" method="post" class="p-4 shadow-sm bg-white rounded">
    <input type="hidden" name="CourseId" value="@ViewBag.CourseId" />

    <div class="mb-3">
        <label for="Title" class="form-label fw-bold">Quiz Title</label>
        <input type="text" class="form-control" id="Title" name="Title" placeholder="Enter quiz title" required />
    </div>

    <div class="mb-3">
        <label for="NumberOfQuestions" class="form-label fw-bold">Number of Questions</label>
        <input type="number" class="form-control" id="NumberOfQuestions" name="NumberOfQuestions" min="2" max="10" required />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Quiz Duration</label>
        <div class="row">
            <div class="col">
                <input type="number" class="form-control" id="Hours" name="Hours" min="0" max="23" required placeholder="Hours" />
            </div>
            <div class="col">
                <input type="number" class="form-control" id="Minutes" name="Minutes" min="0" max="59" required placeholder="Minutes" />
            </div>
            <div class="col">
                <input type="number" class="form-control" id="Seconds" name="Seconds" min="0" max="59" required placeholder="Seconds" />
            </div>
        </div>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Create Quiz</button>
    </div>
</form>

