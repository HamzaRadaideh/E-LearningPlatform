<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <h5 class="card-title text-primary">Quiz: @Model.Title</h5>
        <p>Duration: @Model.Duration</p>
        <p>Number of Questions: @Model.NumberOfQuestions</p>

        <hr />
        <h6>Questions and Answers:</h6>
        <ul class="list-group">
            @foreach (var question in Model.Questions)
            {
                <li class="list-group-item">
                    <strong>Question:</strong> @question.Text <br />
                    <strong>Type:</strong> @question.Type <br />
                    <strong>Marks:</strong> @question.Marks

                    <h6 class="mt-3">Answers:</h6>
                    <ul class="list-group">
                        @foreach (var answer in question.Answers)
                        {
                            <li class="list-group-item">
                                @answer.Text
                                @if (answer.IsCorrect)
                                {
                                    <span class="badge bg-success ms-2">Correct</span>
                                }
                            </li>
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="EditQuiz" asp-controller="Quiz" asp-route-quizId="@Model.QuizId" class="btn btn-outline-success">
        <i class="bi bi-pencil"></i> Edit
    </a>

    <form asp-action="DeleteQuiz" asp-controller="Quiz" asp-route-quizId="@Model.QuizId" method="post">
        <button type="submit" class="btn btn-outline-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
    </form>

    <a asp-controller="Course" asp-action="CourseConfig" asp-route-id="@Model.CourseId" class="btn btn-outline-secondary">
        <i class="bi bi-gear"></i> Back to List
    </a>
</div>
