<div class="container mt-5">
    <h2 class="text-primary mb-4">Edit Quiz: @Model.Title</h2>

    <form asp-action="EditQuiz" method="post" class="shadow-sm p-4 bg-white rounded">
        <input type="hidden" name="QuizId" value="@Model.QuizId" />

        <!-- Quiz Title -->
        <div class="mb-3">
            <label for="Title" class="form-label fw-bold">Quiz Title</label>
            <input type="text" class="form-control border-secondary" id="Title" name="Title" value="@Model.Title" placeholder="Enter quiz title" required />
@*             <span asp-validation-for="Title" class="text-danger"></span>
 *@        </div>

        <!-- Number of Questions -->
        <div class="mb-3">
            <label for="NumberOfQuestions" class="form-label fw-bold">Number of Questions</label>
            <input type="number" class="form-control border-secondary" id="NumberOfQuestions" name="NumberOfQuestions" min="1" max="50" value="@Model.NumberOfQuestions" required />
@*             <span asp-validation-for="NumberOfQuestions" class="text-danger"></span>
 *@        </div>

        <!-- Quiz Duration -->
        <div class="mb-3">
            <label class="form-label fw-bold">Quiz Duration</label>
            <div class="row">
                <div class="col">
                    <input type="number" class="form-control border-secondary" id="Minutes" name="Minutes" min="0" max="59" value="@Model.Duration.Minutes" placeholder="Minutes" required />
                </div>
                <div class="col">
                    <input type="number" class="form-control border-secondary" id="Seconds" name="Seconds" min="0" max="59" value="@Model.Duration.Seconds" placeholder="Seconds" required />
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="d-grid">
            <button type="submit" class="btn btn-primary py-2">Update Quiz</button>
        </div>
    </form>
</div>
