@model DinarkTaskOne.Models.MakeQuiz.QuizModel

<h2>Edit Quiz</h2>

<form asp-action="EditQuiz" method="post" class="form-horizontal">
    <input type="hidden" name="QuizId" value="@Model.QuizId" />

    <div class="form-group">
        <label for="Title" class="col-sm-2 control-label">Quiz Title</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        </div>
    </div>

    <div class="form-group">
        <label for="NumberOfQuestions" class="col-sm-2 control-label">Number of Questions</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="NumberOfQuestions" name="NumberOfQuestions" min="1" max="50" value="@Model.NumberOfQuestions" required />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Quiz Duration</label>
        <div class="col-sm-10 row">
            <div class="col-xs-6">
                <input type="number" class="form-control" id="Minutes" name="Minutes" min="0" max="59" value="@Model.Duration.Minutes" required placeholder="Minutes" />
            </div>
            <div class="col-xs-6">
                <input type="number" class="form-control" id="Seconds" name="Seconds" min="0" max="59" value="@Model.Duration.Seconds" required placeholder="Seconds" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Update Quiz</button>
        </div>
    </div>
</form>
