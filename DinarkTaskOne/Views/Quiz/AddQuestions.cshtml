@model DinarkTaskOne.Models.MakeQuiz.QuestionModel

<h2>Add Question @ViewBag.CurrentQuestion to Quiz</h2>

<form asp-action="AddQuestions" method="post" class="form-horizontal">
    <input type="hidden" name="QuizId" value="@ViewBag.QuizId" />

    <div class="form-group">
        <label for="Text" class="col-sm-2 control-label">Question</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Text" name="Text" placeholder="Enter the question" required />
        </div>
    </div>

    <div class="form-group">
        <label for="QuestionType" class="col-sm-2 control-label">Type of Question</label>
        <div class="col-sm-10">
            <select class="form-control" id="QuestionType" name="QuestionType" required>
                <option value="MultipleChoice">Multiple Choice</option>
                <option value="TrueFalse">True/False</option>
                <option value="MultipleAnswers">Multiple Answers</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="Marks" class="col-sm-2 control-label">Marks</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="Marks" name="Marks" placeholder="Enter marks for the question" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Add Question</button>
        </div>
    </div>
</form>
