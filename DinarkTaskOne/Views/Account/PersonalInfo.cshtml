@model DinarkTaskOne.Models.Authentication_Authorization.UsersModel

@{
    ViewData["Title"] = "Personal Info";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Page Header -->
            <h2 class="text-primary mb-4 text-center">Personal Info</h2>

            <!-- Form -->
            <form asp-action="PersonalInfo" method="post" class="shadow p-4 rounded bg-white">
                <!-- Validation Summary -->
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Phone Number Field -->
                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-bold text-secondary"></label>
                    <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="Enter your phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary btn-lg w-100">Save Changes</button>
            </form>

            <!-- Success Message -->
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-success mt-4" role="alert">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>
