@model DinarkTaskOne.Models.Authentication_Authorization.ChangePassword

@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Page Header -->
            <h2 class="text-primary mb-4 text-center">Change Password</h2>

            <!-- Form -->
            <form asp-action="ChangePassword" method="post" class="shadow p-4 rounded bg-white">
                <!-- Validation Summary -->
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Old Password Field -->
                <div class="form-group mb-3">
                    <label asp-for="OldPassword" class="form-label fw-bold text-secondary"></label>
                    <input asp-for="OldPassword" type="password" class="form-control form-control-lg" placeholder="Enter your current password" />
                    <span asp-validation-for="OldPassword" class="text-danger small"></span>
                </div>

                <!-- New Password Field -->
                <div class="form-group mb-3">
                    <label asp-for="NewPassword" class="form-label fw-bold text-secondary"></label>
                    <input asp-for="NewPassword" type="password" class="form-control form-control-lg" placeholder="Enter your new password" />
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <!-- Confirm Password Field -->
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-bold text-secondary"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirm your new password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary btn-lg w-100">Change Password</button>
            </form>

            <!-- Success Message -->
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-success mt-4" role="alert">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>
