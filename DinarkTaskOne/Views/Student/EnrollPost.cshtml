<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Confirm Enrollment</h3>
        </div>
        <div class="card-body">
            <h5 class="fw-bold">@Model.Title</h5>
            <p class="text-muted">@Model.Description</p>
            <p><strong>Instructor:</strong> @Model.Instructor.FirstName @Model.Instructor.LastName</p>
            <p><strong>Students Enrolled:</strong> @Model.Enrollments.Count</p>

            <form asp-action="ConfirmEnrollment" method="post">
                <input type="hidden" name="courseId" value="@Model.CourseId" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Confirm Enrollment</button>
                    <a href="@Url.Action("Enroll", "Student", new { courseId = Model.CourseId })" class="btn btn-outline-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
